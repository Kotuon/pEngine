{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Engine",
			"command": "C:\\Program Files\\mingw-w64\\x86_64-8.1.0-posix-seh-rt_v6-rev0\\mingw64\\bin\\g++.exe",
			"args": [
                "-m64",
				"-g",
                "-O2",
				"src\\*.cpp",
                "libraries\\JSONCPP\\include\\*.cpp",
				"-o",
				"build\\pEngine.exe",
				"-I", "libraries/SDL2/include",
				"-L", "libraries/SDL2/lib",
                "-I", "libraries/GLM",
                "-I", "libraries/GLFW/include",
                "-L", "libraries/GLFW/lib",
                "-I", "libraries/JSONCPP/include/json",
                "-I", "libraries/JSONCPP/include",
                "-L", "libraries/JSONCPP/lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
                "-lopengl32",
                "-lglfw3dll",
                "-lglu32",
                "-ljsoncpp"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true,
			}
		}
	]
